{
  "version": 2,
  "key": "pilot",
  "name": "DigiMe: Pain, Stress, Sleep Survey",
  "description": "The Digital Discovery Program at the Hasso Plattner Institute for Digital Health at Mount Sinai is focused on understanding how digital technology can be used to increase our understanding of complex disease. In this study, we aim to use wearable devices to learn about underlying symptoms related to pain, stress, and sleep, which affect us all every day. By providing lifestyle data, you can gain insight into your own health and behaviors, lead a healthier life, all while contributing to important scientific research.",
  "baseline": [
    "baseline_demographics",
    "baseline_medical_history",
    "baseline_cd_risc_survey"
  ],
  "surveys": [
    {
      "version": 1,
      "key": "sleep_stress_pain",
      "period": "DAILY",
      "name": "Sleep, Stress, and Pain Survey",
      "short": "Your daily check-in",
      "repeat": 0
    },
    {
      "version": 1,
      "key": "pss4",
      "period": "MONTHLY",
      "name": "Stress Survey",
      "short": "Share information about your stress",
      "repeat": 3
    },
    {
      "version": 1,
      "key": "sleep",
      "period": "WEEKLY",
      "name": "Sleep Survey",
      "short": "Rate your current sleep",
      "repeat": 10
    },
    {
      "version": 1,
      "key": "pain",
      "period": "WEEKLY",
      "name": "Pain Survey",
      "short": "Rate your current pain",
      "repeat": 12
    },
    {
      "version": 1,
      "key": "health_care",
      "period": "BI_WEEKLY",
      "name": "Healthcare Survey",
      "short": "About your healthcare utilization",
      "repeat": 3
    },
    {
      "version": 1,
      "key": "mood_survey",
      "period": "BI_WEEKLY",
      "name": "Mood Survey",
      "short": "About your mood",
      "repeat": 3
    },
    {
      "version": 2,
      "key": "qol_survey",
      "period": "MONTHLY",
      "name": "General Health and Quality of Life Survey",
      "short": "Your opinion on your life",
      "repeat": 3
    },
    {
      "version": 1,
      "key": "satisfaction_survey_monthly",
      "period": "MONTHLY",
      "name": "Monthly study check-in Survey",
      "short": "",
      "repeat": 3
    },
    {
      "version": 1,
      "key": "satisfaction_survey_final",
      "period": "FINAL",
      "name": "Final Check-in Survey",
      "short": "Final study satisfaction",
      "repeat": 1
    }
  ],
  "requiredHealthRecords": {
    "AllergyRecord": "HKClinicalTypeIdentifier",
    "ConditionRecord": "HKClinicalTypeIdentifier",
    "ImmunizationRecord": "HKClinicalTypeIdentifier",
    "LabResultRecord": "HKClinicalTypeIdentifier",
    "MedicationRecord": "HKClinicalTypeIdentifier",
    "ProcedureRecord": "HKClinicalTypeIdentifier",
    "VitalSignRecord": "HKClinicalTypeIdentifier"
  },
  "requiredData": {
    "ActiveEnergyBurned": "HKQuantityTypeIdentifier",
    "AppleExerciseTime": "HKQuantityTypeIdentifier",
    "HeartRate": "HKQuantityTypeIdentifier",
    "HeartRateVariabilitySDNN": "HKQuantityTypeIdentifier",
    "RestingHeartRate": "HKQuantityTypeIdentifier",
    "WalkingHeartRateAverage": "HKQuantityTypeIdentifier",
    "OxygenSaturation": "HKQuantityTypeIdentifier",
    "StepCount": "HKQuantityTypeIdentifier",
    "AppleStandTime": "HKQuantityTypeIdentifier",
    "EnvironmentalAudioExposure": "HKQuantityTypeIdentifier",
    "SleepAnalysis": "HKQuantityTypeIdentifier",
    "DietaryEnergyConsumed": "HKQuantityTypeIdentifier",
    "BloodPressureDiastolic": "HKQuantityTypeIdentifier",
    "BloodPressureSystolic": "HKQuantityTypeIdentifier",
    "BloodGlucose": "HKQuantityTypeIdentifier"
  }
}