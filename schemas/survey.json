{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#survey",
  "type": "object",
  "properties": {
    "key": {
      "type": "string"
    },
    "period": {
      "type": "string",
      "enum": [
        "ONCE",
        "DAILY",
        "WEEKLY",
        "BI_WEEKLY",
        "MONTHLY",
        "FINAL"
      ]
    },
    "repeat": {
      "type": "integer"
    },
    "timeEstimate": {
      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "short": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "completed": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["title", "description"]
    },
    "sections": {
      "type": "array",
      "items": {
        "$ref": "#survey_section"
      },
      "minItems": 1
    }
  },
  "required": ["key", "period", "repeat", "name", "short", "title", "description"]
}