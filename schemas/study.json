{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "#study",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "key": {
      "type": "string"
    },
    "active": {
      "type": "boolean"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "consentId": {
      "type": "string"
    },
    "withdrawText": {
      "type": "string"
    },
    "wearables": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["fitbit", "oura"]
      }
    },
    "baseline": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "surveys": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "requiredHealthRecords": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "string",
          "enum": ["HKClinicalTypeIdentifier"]
        }
      }
    },
    "requiredData": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "string",
          "enum": ["HKQuantityTypeIdentifier"]
        }
      }
    }
  },
  "required": ["key", "active", "name"]
}
